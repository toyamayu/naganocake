<div class="main">
    <h1>会員一覧画面</h1>

    <div>
        <table>
            <thead>
                <tr>
                    <th>会員ID</th>
                    <th>氏名</th>
                    <th>メールアドレス</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |f| %>
                <tr>
                    <td><%= f.id %></td>
                    <td><%= f.last_name %><%= f.first_name %></td>
                    <td><%= f.email %></td>
                    <% if f.is_valid == false  %>
                    <td>有効</td>
                    <% else %>
                    <td>退会済み</td>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
            
        
    
    </div>
</div>