
<div class="main">
    <table>
        <thead>
            <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
            <tr>
                <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order) %>
                <td><%= order.address_user_name %></td>
                <td><%= order.order_details.sum(:total_order) %></td>
                <td><%= t(order.order_status) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>