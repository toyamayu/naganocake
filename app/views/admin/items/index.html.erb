<div class="mai">
    <h1>商品一覧画面</h1>

    <%= link_to "新規追加", new_admin_item_path, class: "btn btn-primary" %>
    <div class="items">
        <table>
            <thead>
                <tr>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜き価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @items.each do |f| %>
                    <tr>
                        <td><%= f.id %></td>
                        <td><%= link_to f.name, admin_item_path(f.id)  %></td>
                        <td><%= f.notax_price %></td>
                        <td><%= f.genre.name %></td>
                        <% if f.is_capable == true %>
                            <td>販売中</td>
                        <% else %>
                            <td>販売停止中</td>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>