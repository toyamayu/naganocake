<div class="main">
    <h1>ジャンル編集画面</h1>

    <%= form_for @genre, url: admin_genre_path  do |f| %>
        <%= f.label :name, value:"ジャンル" %>
        <%= f.text_field :name %>
        <label><%= f.radio_button :is_valid , "0" %>有効</label>
        <label><%= f.radio_button :is_valid , "1" %>無効</label>
        <%= f.submit "変更する",class: "btn btn-primary" %>
    <% end %>
</div>