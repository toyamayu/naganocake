<div class="main">
    <h1>ジャンル追加・一覧画面</h1>

    <div class="create">
        <%= form_for @genre, url: admin_genres_path do |f|%>
            <%= f.label :name, value: "ジャンル" %>
            <%= f.text_field :name %>
            <label><%= f.radio_button :is_valid ,true %>有効</label>
            <label><%= f.radio_button :is_valid ,false %>無効</label>
            <%= f.submit "追加する",class: "btn btn-primary" %>
        <% end %>
    </div>

    <div class="genres">
        <table>
            <thead>
                <tr>
                    <th>ジャンル</th>
                    <th>状態</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @genres.each do |f| %>
                    <tr>
                        <td><%= f.name %></td>
                        <% if f.is_valid == true %>
                            <td>有効</td>
                        <% else %>
                            <td>無効</td>
                        <% end %>
                        <td><%= link_to "編集する", edit_admin_genre_path(f.id), class: "btn btn-primary" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        
    </div>
</div>