<div class="main">

    <h1>注文情報確認</h1>

    <table>
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
            <% @cart_items.each do |cart| %>
                <tr>
                    <td><%= cart.item.name %></td>
                    <td><%= (cart.item.notax_price * 1.1).round %></td>
                    <td><%= cart.amount %></td>
                    <td><%= (cart.item.notax_price * 1.1 * cart.amount).round %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <table>
        <tr>
            <th>送料</th>
            <td>800</td>
        </tr>
        <tr>
            <th>商品合計</th>
            <td><%= (@total_price * 1.1).round %></td>
        </tr>
        <tr>
            <th>請求金額</th>
            <td><%= (@total_price * 1.1).round + 800 %></td>
        <tr>
    </table>

    <div class="address">
        <strong>支払い方法</strong>

         <% if session[:order]["pay_way"].to_i == 0 %>
            <p>クレジットカード</p>
        <% elsif session[:order]["pay_way"].to_i == 1 %>
            <p>銀行振り込み</p>
        <% end %>

        <strong>お届け先</strong>
        <% if session[:order]["address_option"].to_i == 0 %>
            <%= session[:order]["postal_code"] %><%= session[:order]["address"] %><%= session[:order]["address_user_name"] %>
        <% elsif session[:order]["address_option"].to_i == 1 %>
            <%= session[:order]["postal_code"] %>
            <%= session[:order]["address"] %>
            <%= session[:order]["address_user_name"] %>
        <% elsif session[:order]["address_option"].to_i == 2 %>
            <%= session[:order]["postal_code"] %>
            <%= session[:order]["address"] %>
            <%= session[:order]["address_user_name"] %>
        <% end %>

    </div>
    <div class="action">
        <%= link_to "購入を確定する", public_orders_path, method: :post, class: "btn btn-success" %>
    </div>

</div>