<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="clearfix">
      <nav class="navbar-left">
        <h1 class="header-logo">LOGO</h1>
      </nav>
      <nav class="navbar-right">
        <ul>
            <% if admin_signed_in? %>
              <li class="header-items btn btn-light" style:"float:left"><%= link_to "商品一覧", admin_items_path %></li>
              <li class="header-items btn btn-light" style:"float:left"><%= link_to "会員一覧", admin_end_users_path %></li>
              <li class="header-items btn btn-light" style:"float:left">注文履歴一覧</li>
              <li class="header-items btn btn-light" style:"float:left"><%= link_to "ジャンル管理", admin_genres_path %></li>
              <li class="header-items" style:"float:left"><%= link_to "ログアウト", destroy_admin_session_path, class: "btn btn-light logout", method: :delete %></li>
            <% else %>
              <% if end_user_signed_in? %>
              <p class="list-items welcome" style:"float:left">ようこそ、<%= current_end_user.last_name %>さん！</p>
              <li class="header-items btn btn-light" style:"float:left"><%= link_to "マイページ", public_end_user_path(current_end_user.id)  %></li>
              <li class="header-items btn btn-light" style:"float:left"><%= link_to "商品一覧", public_items_path %></li>
              <li class="header-items btn btn-light" style:"float:left"><%= link_to "カート", public_cart_items_path %></li>
              <li class="header-items" style:"float:left"><%= link_to "ログアウト", destroy_end_user_session_path, class: "btn btn-light logout", method: :delete %></li>
              <% else %>
              <%= flash[:notice] %>
              <li class="header-items btn btn-light" style:"float:left"><%= link_to "商品一覧", public_items_path %></li>
              <li class="header-items" style:"float:left"><%= link_to "新規登録", new_end_user_registration_path, class: "btn btn-light"%></li>
              <li class="header-items" style:"float:left"><%= link_to "ログイン", new_end_user_session_path, class: "btn btn-light" %></li>
              <% end %>
            <% end %>

        </ul>
      </nav>
    </header>

    

    <%= yield %>
  </body>
</html>